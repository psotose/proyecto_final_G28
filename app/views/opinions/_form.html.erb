<%= form_with(model: [@real_estate_broker, Opinion.new ]) do |f| %>
    <% if opinion.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(opinion.errors.count, "error") %> No es posible guardar esta reseña:</h2>

          <ul>
            <% opinion.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
    <%= f.label :Califica_del_1_al_5 %>
