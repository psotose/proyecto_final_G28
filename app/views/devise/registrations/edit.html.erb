<h2 class="py-4" align="center">Edita tu perfil</h2>
<div class="d-flex justify-content-center">
  <div class=" border border-dark p-4">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
        
        <div class="form-group">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>

        <div class="form-group">
          <%= f.label :picture %><br />
          <%= f.file_field :picture, autocomplete: "picture" %>
        </div>
        
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email,autocomplete: "email" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Esperando confirmación: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="form-group">
          <%= f.label :password %> <i>(dejala en blanco si no queres cambiarla)</i><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> caracteres mínimos</em>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="form-group">
          <%= f.label :current_password %> <i>(ingresa tu password para confirmar los cambios)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password" %>
        </div>

        <div class="actions">
          <%= f.submit "Update", class:"btn btn-primary", method: 'patch' %>
        </div>
      
      <% end %>
        <div class="form-group">
          <h3>Cancelar mi cuenta</h3>
          <p>Unhappy? <%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger" %></p>
        </div>
        
        <div class="form-group">
          <%= link_to "Back", :back %>
        </div>
  </div>
</div>
